<div class="space-between">
    <div class="space-between">
      <div class="profile">
        <% if @user.image.present? %>
        <%= cl_image_tag(@user.image, :width=>64, :height=>64, :gravity=>"face", :radius=>"max", :crop=>"fill", :background=>"#f2f2f2") %>
        <% else %>
          <%= image_tag 'empty-profile-picture.png', :class => 'icon' %>
          <% end %>
      </div>
      <div class="profile right-align">
        <h1><%= @user.name %></h1>
      </div>
    </div>

    <div class="profile right-align">
        <%= render 'follow_form' if @current_user.present?  %>
    </div>
</div>

<li><strong><%= @user.title %></strong></li>
<li><%= @user.bio %></li>

<br>
<div class="space-between">
  <div class="profile">
    <%= render 'stats' %>
  </div>
  <div class="profile right-align">
    <%= link_to 'Back', tweets_path %>
  </div>
</div>

<section>
  <%= render 'tweets' %>
</section>
