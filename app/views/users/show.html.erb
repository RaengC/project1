
<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <aside class="span4">
      <section>
        <h1>
          <%= image_tag @user %>
          <%= @user.name %>
        </h1>
      </section>

      <section>
        <%= render 'users/stats' %>
      </section>
    </aside>

    <div class="span8">
      <%= render 'users/follow_form' if @current_user.present?  %>
    </div>
  </div>

  <section>
    <%= render 'tweets' %>
  </section>
</div>
