<h1>Edit page</h1>

<%= form_for(@user, :html => {:multipart => true}) do |f| %>
  <div class="form-group">
    <%= f.label "user name"%>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field "password_confirmation"%>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :bio %>
    <%= f.text_field :bio %>
  </div>

  <div class="form-group">
  <%= f.label :image %>
  <%= f.cl_image_upload :image %>
  </div>

  <%= f.submit "Update Account" %>
<% end %>
