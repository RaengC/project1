<%= form_for (@tweet, :html => {:multipart => true}) do |f| %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, :class => 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%# <%= f.url_field :image, :class => 'form-control' %>
    <%= f.cl_image_upload :image, :class => 'form-control' %>
  </div>

  <%= f.submit %>
<% end %>
